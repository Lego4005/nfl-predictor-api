    "/best-bets/{day}": {
      "get": {
        "description": "Returns the recommended \"Best Bets\" according to the BAKER predictive engine, based on a given date of games.",
        "operationId": "BakerBestBetsByDay",
        "summary": "BAKER Best Bets by Day",
        "parameters": [
          {
            "name": "day",
            "in": "path",
            "description": "The date of the games (e.g. 2023-02-27)",
            "required": true,
            "type": "string"
          },
          {
            "name": "sort_by",
            "in": "query",
            "description": "Available values : <code>win_prob</code>, <code>ev</code>, <code>kelly</code>. These are win probability, expected value, and Kelly Criterion. The default is <code>kelly</code>.",
            "type": "string"
          },
          {
            "name": "min_win_prob",
            "in": "query",
            "description": "Sets a minimum floor of win probability from 0 to 1. The default is 0.",
            "type": "number"
          },
          {
            "name": "bet_type",
            "in": "query",
            "description": "Available values : <code>all</code>, <code>Points</code>, <code>Total Rebounds</code>, <code>Total Assist</code>s, <code>Total 3-Pointers Made</code>, <code>Total Steals</code>, <code>Total Blocks</code>, <code>Total Turnovers</code>, <code>Total Points & Assists</code>, <code>Total Points, Rebounds, & Assists</code>, <code>Total Points & Rebounds</code>, <code>Total Rebounds & Assists</code>. Default value is null.",
            "type": "string"
          },
          {
            "name": "market_type",
            "in": "query",
            "description": "Available values: <code>player_prop</code> and <code>game_line</code>. Defaults to null.",
            "type": "string"
          },
          {
            "name": "sportsbook",
            "in": "query",
            "description": "Accepts available sportsbooks as a string.",
            "type": "string"
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "schema": {
              "type": "null",
              "x-nullable": false
            },
            "examples": {
              "application/json": {}
            }
          },
