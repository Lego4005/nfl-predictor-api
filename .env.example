# NFL Predictor API Configuration
# Copy this file to .env and fill in your actual API keys

# Data Ingestion API Keys (Priority 1 - Required)
OPENWEATHER_API_KEY=your_openweathermap_api_key_here
ODDS_API_KEY=your_the_odds_api_key_here

# Additional Data Sources
SPORTSDATA_IO_KEY=your_sportsdata_io_key_here

# Fallback Data Sources (Optional)
RAPID_API_KEY=your_rapid_api_key_here

# Cache Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL_MINUTES=30
CACHE_MAX_MEMORY=256mb

# API Rate Limiting
ODDS_API_RATE_LIMIT=500
SPORTSDATA_IO_RATE_LIMIT=1000
ESPN_API_RATE_LIMIT=1000
NFL_API_RATE_LIMIT=500
RAPID_API_RATE_LIMIT=100

# Monitoring and Health Checks
HEALTH_CHECK_INTERVAL=300
MONITORING_ENABLED=true
LOG_LEVEL=INFO

# Production Settings
ENVIRONMENT=production
DEBUG=false
CORS_ORIGINS=https://your-frontend-domain.com
API_BASE_URL=https://your-api-domain.com

# Security
API_SECRET_KEY=your_secret_key_for_jwt_or_sessions
ALLOWED_HOSTS=your-api-domain.com,localhost

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/nfl_predictor
# For development with SQLite
USE_SQLITE=false
DB_NAME=nfl_predictor

# NMI Payment Processing (Primary)
NMI_USERNAME=your_nmi_username
NMI_PASSWORD=your_nmi_password
NMI_SECURITY_KEY=your_nmi_security_key
NMI_API_URL=https://secure.nmi.com/api/transact.php

# Stripe Payment Processing (Backup)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_DAILY_PRICE_ID=price_daily_plan_id
STRIPE_WEEKLY_PRICE_ID=price_weekly_plan_id
STRIPE_MONTHLY_PRICE_ID=price_monthly_plan_id
STRIPE_SEASON_PRICE_ID=price_season_plan_id

# JWT Authentication
JWT_SECRET_KEY=your_super_secret_jwt_key_here_make_it_long_and_random
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Email Configuration
EMAIL_PROVIDER=sendgrid  # or 'aws_ses'
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@nflpredictor.com
FROM_NAME=NFL Predictor

# ML Model Configuration
ML_MODELS_ENABLED=true
ML_TRAINING_DATA_PATH=data/historical
ML_MODEL_CACHE_TTL=3600